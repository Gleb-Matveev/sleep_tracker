<section class="card">
  <div class="card-header">
    <h1 class="card-title">Sleep statistics</h1>
    <span class="badge-pill">Last nights</span>
  </div>

  <p class="card-subtitle">
    Overview of your recent sleep quality. Later this will be filled from the database.
  </p>

  <div style="margin-top: 1rem; overflow-x: auto;">
    <table class="table">
      <thead>
        <tr>
          <th>Date</th>
          <th>Score 1</th>
          <th>Score 2</th>
          <th>Description</th>
        </tr>
      </thead>
      <tbody>
        {{#each statistics}}
          <tr>
            <td>{{this.date}}</td>
            <td>{{this.score1}}</td>
            <td>{{this.score2}}</td>
            <td>{{this.description}}</td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</section>


