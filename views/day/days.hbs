<section class="card">
  <div class="card-header">
    <h1 class="card-title">Sleep statistics</h1>
    <div style="display: flex; align-items: center; gap: 0.6rem;">
      <span class="badge-pill">Last nights</span>
      <a class="btn btn-secondary" href="/day/new" aria-label="Add day">+</a>
    </div>
  </div>

  <p class="card-subtitle">
    Overview of your recent sleep quality and duration.
  </p>

  <div style="margin-top: 1rem; overflow-x: auto;">
    <table class="table">
      <thead>
        <tr>
          <th>Date</th>
          <th>GetUp Score</th>
          <th>Feeling Score</th>
          <th>Up time</th>
          <th>Down time</th>
          <th>Associated routines</th>
          <th>Description</th>
          <th style="width: 1%;"></th>
        </tr>
      </thead>
      <tbody>
        {{#each daysDto}}
          <tr class="day-row card-delete-trigger" data-day-id="{{this.id}}" style="cursor: pointer;" card-collection-url="day", entity-id={{this.id}}>
            <td>{{this.date}}</td>
            <td>{{this.getup_score}}</td>
            <td>{{this.feeling_score}}</td>
            <td>{{this.wakeUpTime}}</td>
            <td>{{this.wakeDownTime}}</td>
            <td>
              {{#if this.routines}}
                  {{#each this.routines}}
                    <li>{{this.name}}</li>
                  {{/each}}
              {{else}}
                <span>No routines</span>
              {{/if}}
            </td>
            <td>
              <span>{{this.description}}</span>
            </td>
            <td style="text-align: right;">
              <button
                type="button"
                class="btn btn-secondary day-delete-btn js-delete-trigger"
                style="padding-inline: 0.6rem; font-size: 0.75rem;"
                data-delete-url="/day/{{this.id}}"
                data-remove-closest=".day-row"
                data-delete-message="Delete this day?"
              >
                Delete
              </button>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
      </div>
</section>
