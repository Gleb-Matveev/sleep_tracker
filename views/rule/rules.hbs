<section class="card">
  <div class="card-header">
    <h1 class="card-title">Sleep rules</h1>
    <div style="display: flex; align-items: center; gap: 0.6rem;">
      <span class="badge-pill">Healthy habits</span>
      <a class="btn btn-secondary" href="/rule/new" aria-label="Add rule">+</a>
    </div>
  </div>

  <p class="card-subtitle">
    Simple rules that support stable, deep and restorative sleep.
  </p>

  <div style="margin-top: 1rem; display: grid; gap: 1rem;">
    {{#each items}}
      <article class="card card-hover card-delete-trigger" style="padding: 1rem 1.1rem; cursor: pointer;" card-collection-url="rule", entity-id={{this.id}}>
        <div class="card-header" style="margin-bottom: 0.4rem;">
          <h2 class="card-title" style="font-size: 0.95rem;">{{this.name}}</h2>
          <button
            type="button"
            class="btn btn-secondary js-delete-trigger"
            style="padding-inline: 0.75rem; font-size: 0.8rem;"
            data-delete-url="/rule/{{this.id}}"
            data-remove-closest=".card"
            data-delete-message="Delete this rule?"
          >
            Delete
          </button>
        </div>
        <p class="card-subtitle">
          {{this.description}}
        </p>
      </article>
    {{/each}}
  </div>
</section>



